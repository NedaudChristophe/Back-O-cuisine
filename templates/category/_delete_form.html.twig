    <form method="post" action="{{ path('category_delete', {'id': category.id}) }}" onsubmit="return confirm('Étes vous sûre de vouloir supprimer la catégorie {{ category.name }} ?');">
        <input type="hidden" name="_method" value="DELETE">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.id) }}">
